    <script>
        $(document).ready(function () {
            $("#txtfiled").on("keyup", function () {
                //gets all the value
                var value = $(this).val().toLowerCase();

                $("#filter *").filter(function () {

                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

    <script>
        //get all the class with the samename
        const count = document.querySelectorAll('.stat-counter');
        //determining speed
        const speed = 2500;

        //looping
        count.forEach(counter => {
            //making and function of update counter
            const updateCount = () => {
                //gettig the target from the text filed
                const target = +counter.getAttribute('data-target');
                //getting the initial coun from the text filed
                const countn = +counter.innerText;

                //logic for inc with each loop
                const inc = target / speed;

                //setting to stop the coputer if it reaches its limit and more
                if (countn < target) {
                    counter.innerText = Math.ceil(countn + inc);
                    setTimeout(updateCount, 300);
                }
                else {
                    countn.innerText = target;
                }
            }
            //calling function on each iteration loop
            updateCount();
        });

    </script>

