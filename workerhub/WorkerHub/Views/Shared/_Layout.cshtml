@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/lib/jquery.countdown/jquery.countdown.js"></script>
    <script src="~/lib/jquery.countdown/jquery.countdown.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/android-chrome-192x192.png" alt="Logo" /></a>
                @*checking if the user is signed in or not and the signin manager is injected and it as a function named IsSignedIn()*@
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse navbar-center ">
                        <ul class="navbar-nav mr-5">
                            <li class="nav-item mr-5">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item mr-5">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Employees</a>
                            </li>
                            <li class="nav-item mr-5">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact Us</a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ml-auto">
                        <partial name="_LoginPartial.cshtml" />
                    </div>
                }
                else
                {
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="mainbutt text-dark" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class=" mainbutt text-dark" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    </ul>
                }
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <div class="row">
                <div class="nav navbar col-md-6">

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <h5>Menu</h5>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Privacy">For Employee</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul>

                </div>
                <div class="nav navbar col-md-6 ">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mt-3">
                            <a asp-controller="Home" asp-action="Index">
                                <img src="/images/android-chrome-192x192.png" alt="Logo" />
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <h6>Address: Pulchowk, Lalitpur</h6>
                        </li>
                        <li class="nav-item mt-3">
                            <h6>Email: Sujinrajak@gmail.com</h6>

                        </li>
                        <li class="nav-item mt-3">
                            <h6>Contact Number: +977 9812122121</h6>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container text-center">
            &copy; 2020 - Work - All Rights Reserved
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>