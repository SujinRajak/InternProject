@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="social-links pt-2">
        <button type="button" class="btn btn-defualt btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-size: 20px; color: #5c768d;border-radius: 20%; text-align:center;">
            @User.Identity.Name.Substring(0, 1)
        </button>
        <div class="dropdown-menu dropdown-menu-right text-right" id="drop">
            <ul class="navbar-nav flex-column">
                <li class="nav-item">
                    <a asp-controller="High" asp-action="HighProfileSection" class="dropdown-item">Profile</a>
                </li>
                <li class="nav-item">
                    <form id="logoutForm" class="form-inline" asp-controller="Account" asp-action="Logout">
                        <button type="submit" class="btn btn-link btn-danger text-dark dropdown-item">Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
}
else
{
    <li class="nav-item">
        <a class=" mainbutt  text-dark " asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class=" mainbutt text-dark" asp-area="Account" asp-page="Login">Login</a>
    </li>
}