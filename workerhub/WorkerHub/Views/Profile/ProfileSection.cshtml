                                    </tr>
                                    <tr>
                                        <td>City</td>
                                        <td>: @Model.AppUser.city</td>
                                    </tr>
                                    <tr>
                                        <td>State</td>
                                        <td>: @Model.AppUser.city</td>
                                    </tr>
                                    <tr>
                                        <td>Country</td>
                                        <td>: @Model.AppUser.country</td>
                                    </tr>
                                </tbody>
