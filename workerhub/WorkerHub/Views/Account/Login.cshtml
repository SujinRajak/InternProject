@model LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "../Shared/_mainLayout";
}


<div class="container signin">
    <form id="account" method="post">
        <div class="text-center icoon">
            <i class="fa fa-user ico" aria-hidden="true"></i>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md-8 offset-3 login-content">
            <div class="form-group fontuser">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter the Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group fontPassword">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter the Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input  asp-for="RememberMe"/>
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
        </div>
    </form>
</div>

