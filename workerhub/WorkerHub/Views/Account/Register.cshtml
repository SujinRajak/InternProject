@model RegisterViewModel
@{
    ViewBag.Title = "User Registration";
    Layout = "../Shared/_mainLayout";
} 


<div class="container register-main">
    <form method="post">
        <div class="text-center icoon">
            <i class="fa fa-user-plus ico" aria-hidden="true"></i>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row register-row">
            <div class="form-group col-md-6">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter Firstname" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class=" col-md-6">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="Enter Lastname" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class=" register-row">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="row register-row">
            <div class=" form-group  col-md-6">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class=" form-group col-md-6">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm  Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="register-row ">
            <button type="submit" class="btn btn-primary text-center ">Register</button>
        </div>
    </form>
</div>
