@model WorkerHub.ViewModel.ValidateSkill


<div class=" col-md-2 mr-auto">
    <a asp-action="ExpCreate" asp-controller="Resume">Back to List</a>
</div>

<div class="row">
    <div class="card col-md-6 offset-3 text-center">
        <div class="card-header">
            <div class="text-center">
                <h4>Add Skills</h4>
            </div>
        </div>
        <div class="card-body   box-shadow">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label hidden asp-for="Id" class="control-label"></label>
                    <input hidden asp-for="Id" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Skill" class="control-label"></label>
                    <br />
                    <select class="custom-select" asp-for="Skill">
                        <option value="None" disabled>None</option>
                        <option value="Automobile">Automobile</option>
                        <option value="Painter">Painter</option>
                        <option value="Electrician">Electrician</option>
                        <option value="Designing and Multimedia">Designing and Multimedia</option>
                        <option value="Telecommunication">Telecommunication</option>
                        <option value="Education">Education</option>
                        <option value="Bank">Bank</option>
                        <option value="Hospital">Hospital</option>
                        <option value="Construction">Construction</option>
                        <option value="Home">Home</option>
                        <option value="Industry">Industry</option>
                        <option value="Photographers">Photographers</option>
                        <option value="Saloon">Saloon</option>
                        <option value="Hotel">Hotel</option>
                        <option value="Trainers">Trainers</option>
                        <option value="BabySitter">BabySitter</option>
                        <option value="Key Restore">Key Restore</option>
                        <option value="Music">Music</option>
                    </select>
                    <span asp-validation-for="Skill" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SkillPercent" class="control-label"></label>
                    <input asp-for="SkillPercent" class="form-control" />
                    <span asp-validation-for="SkillPercent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="skillDescription" class="control-label"></label>
                    <input asp-for="skillDescription" class="form-control" />
                    <span asp-validation-for="skillDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

   

