@model TransactionIndexViewModel

@{
    Layout = "/Views/Shared/_adminView.cshtml";
    ViewData["Title"] = "Transaction Details";
}

<div class="right_col" role="main">
    <div class="x_title">
        <h2>Transaction List</h2>
        <div class="text-right">
            <h4>Total Sales: Rs @(ViewBag.TotalSales / 100)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form method="get" action="@Url.Action("GetAdminTransactionList")">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="fromDate">From Date</label>
                        <input type="date" class="form-control" id="fromDate" name="fromDate" value="@ViewBag.FromDate" required>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="toDate">To Date</label>
                        <input type="date" class="form-control" id="toDate" name="toDate" value="@ViewBag.ToDate" required>
                    </div>
                    <div class="form-group col-md-2">
                        <button type="submit" class="btn btn-primary mt-4">Apply Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Tidx</th>
                <th>Status</th>
                <th>Order Id</th>
                <th>Purchase Order Name</th>
                <th>Amount</th>
                <th>Created At</th>
                <th>User Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Transactions)
            {
                <tr>
                    <td>@item.Tidx</td>
                    <td>@item.Status</td>
                    <td>@item.OrderId</td>
                    <td>@item.PurchaseOrderName</td>
                    <td>Rs @(item.Amount / 100)</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>@item.UserName</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-12">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("GetAdminTransactionList", new { page = ViewBag.CurrentPage - 1})" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("GetAdminTransactionList", new { page = i})">@i</a>
                        </li>
                    }
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("GetAdminTransactionList", new { page = ViewBag.CurrentPage + 1})" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
