@model IEnumerable<JoinViewModel>
@{ 
    Layout = "/Views/Shared/_LayoutHire.cshtml";
}
<div class="container">
    <div class="col-md-6 offset-3 mt-4">
        <div class="input-group">
            <input id="txtfiled" class="form-control" placeholder="Search by username or skill" />
        </div>
    </div>
    
    <div class="container mt-5">
        <table class="table table-dark table-hover text-center" border="1">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Domain</th>
                    <th>Skill Description</th>
                    <th>Address</th>
                    <th>Availability</th>
                </tr>
            </thead>
            <tbody id="Filter">
                @foreach (var item in Model)
                {
                <tr>
                    <td><a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">@item.Firstname @item.LastName </a></td>
                    <td>@item.Skill</td>
                    <td>@item.skillDescription</td>
                    @if (item.PermanentAddress != null)
                    {
                        <td>@item.PermanentAddress</td>
                    }
                    else
                    {
                        <td>@item.TemporaryAddress</td>
                    }
                    @if (@item.Availablility)
                    {
                        <td>Available</td>
                    }
                    else
                    {
                        <td>Not Aavailable</td>
                    }
                </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $("#txtfiled").on("keyup", function () {
                //gets all the value
                var value = $(this).val().toLowerCase();
                $("#Filter tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>


}