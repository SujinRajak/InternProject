@model EmpProfileDetialViewModel

@{
    ViewBag.Title = "Profile Details";
    Layout = "/Views/Shared/_Layout.cshtml"; // Update the layout path as per your project

    var photopath = "~/images/" + (Model.photo ?? "user.png");
}

<div class="container">
    <h2>Profile Details</h2>

    <div class="row">
        <div class="col-md-4">
            <img id="output_image" src="@Url.Content(photopath)" class="img-responsive" asp-append-version="true" />
        </div>
        <div class="col-md-8">
            <table class="table table-bordered">
                <tr>
                    <th>First Name</th>
                    <td>@Model.FirstName</td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>@Model.LastName</td>
                </tr>
                <tr>
                    <th>Phone Number</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <th>Permanent Address</th>
                    <td>@Model.PermanentAddress</td>
                </tr>
                <tr>
                    <th>Temporary Address</th>
                    <td>@Model.TemporaryAddress</td>
                </tr>
                <tr>
                    <th>Sex</th>
                    <td>@Model.Sex</td>
                </tr>
                <tr>
                    <th>Availability</th>
                    <td>@Model.Availabilility</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>@Model.Descripition</td>
                </tr>
                <tr>
                    <th>Citizenship</th>
                    <td>@Model.citizenship</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>@Model.country</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>@Model.city</td>
                </tr>
                <tr>
                    <th>Street Name</th>
                    <td>@Model.streetname</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>@Model.states</td>
                </tr>
                <tr>
                    <th>Date of Birth</th>
                    <td>@Model.dob</td>
                </tr>
                <tr>
                    <th>Blood Group</th>
                    <td>@Model.bloodgroup</td>
                </tr>
            </table>
        </div>
    </div>
</div>
